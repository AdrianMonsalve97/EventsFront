  "components": {
    "schemas": {
      "Empresa": {
        "type": "object",
        "properties": {
          "nombreEmpresa": {
            "type": "string",
            "nullable": true
          },
          "indentificacionEmpresa": {
            "type": "string",
            "nullable": true
          },
          "tipoDocumento": {
            "$ref": "#/components/schemas/TipoDocumento"
          },
          "nombreContactoEmpresa": {
            "type": "string",
            "nullable": true
          },
          "numeroContatoEmpresa": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Evento": {
        "required": [
          "prioridad"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "maxLength": 100,
            "type": "string",
            "nullable": true
          },
          "descripcion": {
            "maxLength": 500,
            "type": "string",
            "nullable": true
          },
          "fechaHora": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "ubicacion": {
            "maxLength": 200,
            "type": "string",
            "nullable": true
          },
          "capacidadMaxima": {
            "maximum": 40,
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "asistentesRegistrados": {
            "type": "integer",
            "format": "int32"
          },
          "prioridad": {
            "$ref": "#/components/schemas/Prioridad"
          },
          "fechas": {
            "$ref": "#/components/schemas/FechasEventos"
          },
          "usuarioCreadorId": {
            "type": "integer",
            "format": "int32"
          },
          "usuarioCreadorNombre": {
            "type": "string",
            "nullable": true
          },
          "inscripciones": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Inscripcion"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "EventoFiltroDto": {
        "type": "object",
        "properties": {
          "nombre": {
            "type": "string",
            "nullable": true
          },
          "ubicacion": {
            "type": "string",
            "nullable": true
          },
          "fechaHora": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "capacidadMaxima": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FechasEventos": {
        "type": "object",
        "properties": {
          "fechaInicio": {
            "type": "string",
            "format": "date-time"
          },
          "fechaFin": {
            "type": "string",
            "format": "date-time"
          },
          "fechaAsignacion": {
            "type": "string",
            "format": "date-time"
          },
          "fechaCotizacion": {
            "type": "string",
            "format": "date-time"
          },
          "fechaAprovacion": {
            "type": "string",
            "format": "date-time"
          },
          "fechaInicioFormato": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "fechaFinFormato": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "fechaAsignacionFormato": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "fechaCotizacionFormato": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "fechaAprovacionFormato": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "Inscripcion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "usuarioId": {
            "type": "integer",
            "format": "int32"
          },
          "usuario": {
            "$ref": "#/components/schemas/Usuario"
          },
          "eventoId": {
            "type": "integer",
            "format": "int32"
          },
          "evento": {
            "$ref": "#/components/schemas/Evento"
          },
          "fechaInscripcion": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "LoginDto": {
        "required": [
          "correo",
          "password"
        ],
        "type": "object",
        "properties": {
          "correo": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "Prioridad": {
        "enum": [
          1,
          2,
          3,
          4,
          5,
          6
        ],
        "type": "integer",
        "format": "int32"
      },
      "Rol": {
        "enum": [
          1,
          2,
          3,
          4,
          5,
          6
        ],
        "type": "integer",
        "format": "int32"
      },
      "TipoDocumento": {
        "enum": [
          1,
          2,
          3,
          4,
          5,
          6
        ],
        "type": "integer",
        "format": "int32"
      },
      "Usuario": {
        "required": [
          "celularCorporativo",
          "celularPersonal",
          "correoCorporativo",
          "correoPersonal",
          "documentoIdentidad",
          "id",
          "nombre",
          "passwordHash",
          "rol",
          "tipoDocumento"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "nombre": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "celularPersonal": {
            "maximum": 9999999999,
            "minimum": 1000000000,
            "type": "integer",
            "format": "int64"
          },
          "celularCorporativo": {
            "maximum": 9999999999,
            "minimum": 1000000000,
            "type": "integer",
            "format": "int64"
          },
          "tipoDocumento": {
            "$ref": "#/components/schemas/TipoDocumento"
          },
          "documentoIdentidad": {
            "maximum": 999999999999999,
            "minimum": 1,
            "type": "integer",
            "format": "int64"
          },
          "correoCorporativo": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "correoPersonal": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "passwordHash": {
            "minLength": 8,
            "type": "string"
          },
          "rol": {
            "$ref": "#/components/schemas/Rol"
          },
          "fechaContratoInicio": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "fechaContratoFin": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "empresa": {
            "$ref": "#/components/schemas/Empresa"
          },
          "eventosCreados": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Evento"
            },
            "nullable": true
          },
          "inscripciones": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Inscripcion"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "Por favor inserte el jwt despues de la palabra bearer de esta forma \"<strong>bearer {JWT}</strong>\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}
